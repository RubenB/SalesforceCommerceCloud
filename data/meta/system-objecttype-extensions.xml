<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">

    <type-extension type-id="PaymentMethod">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="molliePaymentMethodId">
                <display-name xml:lang="x-default">Payment method ID</display-name>
                <description xml:lang="x-default">The payment method ID of Mollie https://docs.mollie.com/index#</description>
                <type>string</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieOrderExpiryDays">
                <display-name xml:lang="x-default">Order expiry days</display-name>
                <description xml:lang="x-default">The expiry days used when creating order with the ORDER API https://docs.mollie.com/index#</description>
                <type>int</type>
                <localizable-flag>false</localizable-flag>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieEnabledTransactionAPI">
                <display-name xml:lang="x-default">Enabled transaction API</display-name>
                <description xml:lang="x-default">The API that is used to create the order (order/payment) https://docs.mollie.com/index#</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition default="true">
                        <value>order</value>
                    </value-definition>
                    <value-definition>
                        <value>payment</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Mollie">
                <display-name xml:lang="x-default">Mollie</display-name>
                <attribute attribute-id="molliePaymentMethodId"/>
                <attribute attribute-id="mollieOrderExpiryDays"/>
                <attribute attribute-id="mollieEnabledTransactionAPI"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

    <type-extension type-id="PaymentTransaction">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="molliePaymentId">
                <display-name xml:lang="x-default">Mollie payment ID</display-name>
                <description xml:lang="x-default">The Mollie payment ID https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="molliePaymentStatus">
                <display-name xml:lang="x-default">Mollie payment status</display-name>
                <description xml:lang="x-default">The Mollie payment status https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Mollie">
                <display-name xml:lang="x-default">Mollie</display-name>
                <attribute attribute-id="molliePaymentId"/>
                <attribute attribute-id="molliePaymentStatus"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

    <type-extension type-id="Order">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="mollieOrderId">
                <display-name xml:lang="x-default">Mollie order ID</display-name>
                <description xml:lang="x-default">The Mollie order ID https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieOrderStatus">
                <display-name xml:lang="x-default">Mollie order status</display-name>
                <description xml:lang="x-default">The Mollie order status https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieUsedTransactionAPI">
                <display-name xml:lang="x-default">Used transaction API</display-name>
                <description xml:lang="x-default">The used transaction API to create this order (order/payment) https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieRefundStatus">
                <display-name xml:lang="x-default">Refund status</display-name>
                <description xml:lang="x-default">The current mollie refund status https://docs.mollie.com/index#</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">NOTREFUNDED</display>
                        <value>REFUND_STATUS_NOTREFUNDED</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">PARTREFUNDED</display>
                        <value>REFUND_STATUS_PARTREFUNDED</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">REFUNDED</display>
                        <value>REFUND_STATUS_REFUNDED</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Mollie">
                <display-name xml:lang="x-default">Mollie</display-name>
                <attribute attribute-id="mollieOrderId"/>
                <attribute attribute-id="mollieOrderStatus"/>
                <attribute attribute-id="mollieUsedTransactionAPI" />
                <attribute attribute-id="mollieRefundStatus" />
            </attribute-group>
        </group-definitions>
    </type-extension>

    <type-extension type-id="Profile">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="mollieCustomerId">
                <display-name xml:lang="x-default">Mollie customer ID</display-name>
                <description xml:lang="x-default">The Mollie customer ID used for single click payments https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Mollie">
                <display-name xml:lang="x-default">Mollie</display-name>
                <attribute attribute-id="mollieCustomerId"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

    <type-extension type-id="Product">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="mollieProductCategory">
                <display-name xml:lang="x-default">Mollie product category</display-name>
                <description xml:lang="x-default">The product category that is send to Mollie with the order (meal/eco/gift)</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition>
                        <value>meal</value>
                    </value-definition>
                    <value-definition>
                        <value>eco</value>
                    </value-definition>
                    <value-definition>
                        <value>gift</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Mollie">
                <display-name xml:lang="x-default">Mollie</display-name>
                <attribute attribute-id="mollieProductCategory"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="mollieEnableTestMode">
                <display-name xml:lang="x-default">Enable test mode</display-name>
                <description xml:lang="x-default">This setting enables Mollie components test mode and will use the test API key https://docs.mollie.com/index#</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="mollieBearerToken">
                <display-name xml:lang="x-default">API key</display-name>
                <description xml:lang="x-default">Mollie API key found on the Mollie dashboard (this API key will be used when "Enable test mode" is turned off) https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieBearerTestToken">
                <display-name xml:lang="x-default">Test API key</display-name>
                <description xml:lang="x-default">Mollie test API key found on the Mollie dashboard (this API key will be used when "Enable test mode" is turned on) https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieDefaultEnabledTransactionAPI">
                <display-name xml:lang="x-default">Default enabled transaction API</display-name>
                <description xml:lang="x-default">The default enabled transaction API (order/payment) https://docs.mollie.com/index#</description>
                <type>enum-of-string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <value-definitions>
                    <value-definition default="true">
                        <value>order</value>
                    </value-definition>
                    <value-definition>
                        <value>payment</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>
            <attribute-definition attribute-id="mollieDefaultOrderExpiryDays">
                <display-name xml:lang="x-default">Default order expiry days</display-name>
                <description xml:lang="x-default">Default expiry days for orders created with the order API (max 100) https://docs.mollie.com/index#</description>
                <type>int</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <max-value>100</max-value>
            </attribute-definition>
            <attribute-definition attribute-id="mollieEnableSingleClickPayments">
                <display-name xml:lang="x-default">Enable single click payments</display-name>
                <description xml:lang="x-default">When enabled, this will show the "Save card" checkbox in the checkout https://docs.mollie.com/index#</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="mollieComponentsEnabled">
                <display-name xml:lang="x-default">Enable Mollie components</display-name>
                <description xml:lang="x-default">This will enable Mollie components and render the card inputs in the checkout https://docs.mollie.com/index#</description>
                <type>boolean</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <default-value>true</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="mollieComponentsProfileId">
                <display-name xml:lang="x-default">Components Profile ID</display-name>
                <description xml:lang="x-default">Mollie profile ID found on the Mollie dashboard https://docs.mollie.com/index#</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="mollieLogCategory">
                <display-name xml:lang="x-default">Log category</display-name>
                <description xml:lang="x-default">Log category used by SFCC</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>mollie</default-value>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Mollie Config">
                <display-name xml:lang="x-default">Configuration for Mollie Integration</display-name>
                <attribute attribute-id="mollieEnableTestMode"/>
                <attribute attribute-id="mollieBearerToken"/>
                <attribute attribute-id="mollieBearerTestToken"/>
                <attribute attribute-id="mollieDefaultEnabledTransactionAPI"/>
                <attribute attribute-id="mollieDefaultOrderExpiryDays"/>
                <attribute attribute-id="mollieEnableSingleClickPayments"/>
                <attribute attribute-id="mollieComponentsEnabled"/>
                <attribute attribute-id="mollieComponentsProfileId"/>
                <attribute attribute-id="mollieLogCategory"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

</metadata>
